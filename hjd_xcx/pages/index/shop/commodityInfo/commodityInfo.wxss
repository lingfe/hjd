/*下单*/
.view_btn{
  width: 100%;
  height: 200rpx;
}
.btn{
  position: relative;
  top: 40rpx;
  width: 50%;
  height: 90rpx;
  line-height: 90rpx;
  margin: 0px auto;
  margin-top: 50rpx;
  text-align: center;
  font-size: 28rpx;
  background-color: #14BAC8;
  box-shadow:2px 2px 10px #ccc;
  border-radius: 10px;
  color: #fff;
}
.btn:active{
  opacity: 0.7;
}
button::after {
  content: " ";
  width: 200%;
  height: 200%;
  position: absolute;
  top: 0;
  left: 0;
  border: 0px solid #fff;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  box-sizing: border-box;
  border-radius: 10px;
}

