  line-height: 200rpx;
}
/*删除图片*/
.img_tt{
  z-index: 3;
  position:absolute;
  width: 45rpx;
  height: 45rpx;
  margin-left:170rpx;
  margin-top:-20rpx;

}

/*商品介绍*/
.form_text{
  width: 100%;
}
.text{
  width: 92%;
  margin-left: 20rpx;
  background-color: #fff;
  font-size: 26rpx;
  padding-left: 10rpx;
  padding-top: 10rpx;
}

/*提交按钮*/
.form_btn{
  width: 100%;
  padding-top:50rpx;
  padding-bottom: 50rpx; 
}
.btn{
  width: 50%;
  margin: auto;
 text-align: center;
