/*图片选择*/
.form_img{
  width: 100%;
  height: 210rpx;
}
.item_img{
  width: 26%;
  float: left;
  margin-left: 42rpx;
  height: 200rpx;
}
.img{
  width: 100%;
  height: 200rpx;
}
.img_not{
  width: 26%;
  float: left;
  margin-left: 40rpx;
  height: 200rpx;
  background-color: #fff;
  text-align: center;
