 page{
    background-color: #eee;
}

.page_view{
  width: 100%;
}
.view_model{
  width: 100%;
  height: 300rpx;
  background-color: #fff;
  margin-top: 20rpx;
  padding-top: 30rpx;
}
.model_img{
  width: 22%;
  height: 160rpx;
    float: left;
    margin-left: 10rpx;
}
.img{
    width: 100%;
  height: 160rpx;
}
.model_text{
  width: 52%;
  margin-left: 20rpx;
  float: left;
}
.text_title{
  font-size: 44rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.text_laiyuan{
  font-size: 26rpx;
  color: #ccc;
  height: 60rpx;
  line-height: 60rpx;
}
.text_prices{
  font-size: 26rpx;
  line-height: 50rpx;
  height: 50rpx;
  color: red;
}
.model_state{
    width: 20%;
  float: left;
  margin-left: 10rpx;
  font-size: 30rpx;
  height: 160rpx;
  line-height: 160rpx;
  color: #ccc;
}
.model_btn{
  width: 96%;
  border-top: 1rpx #ddd solid;
  margin: auto;
  margin-left: 10rpx;
  margin-top: 20rpx;
  padding-top: 20rpx;
  float: left;
  height: 80rpx;
}
.bin_content{
  float: left;
  line-height: 80rpx;
  padding-left: 10rpx;
  font-size: 30rpx;
}
.btn{
width:20%;
height:60rpx;
text-align:center;
line-height:60rpx;
font-size:30rpx;
border:1rpx solid #aaa;
float:right;
margin-right: 10rpx;
border-radius: 10rpx;
color: #fff;
font-weight: bold;
}
.state_0{
  background-color: #000033;
}
.state_1{
  background-color: red;
}
.state_2{
  color: #ddd;
}
.btn:active{
  opacity: 0.7;
}